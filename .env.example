# Supabase Configuration
PUBLIC_SUPABASE_URL=your_supabase_url_here
PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Database Configuration (PostgreSQL)
# Получите это из Supabase: Settings -> Database -> Connection String -> URI
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.xxxxxxxxxxxxx.supabase.co:5432/postgres

# WebSocket Server URL (для клиента)
# Для локальной разработки:
PUBLIC_WS_URL=ws://localhost:3001
# Для продакшена (замените на ваш Render.com URL):
# PUBLIC_WS_URL=wss://your-app-name.onrender.com

# Frontend URL (для WebSocket сервера, CORS)
# Для локальной разработки:
PUBLIC_FRONTEND_URL=http://localhost:5173
# Для продакшена (замените на ваш Vercel URL):
# PUBLIC_FRONTEND_URL=https://your-app.vercel.app

# WebSocket Server HTTP API URL (для отправки уведомлений из SvelteKit)
# Для локальной разработки:
WS_SERVER_URL=http://localhost:3001/notify
# Для продакшена (замените на ваш Render URL):
# WS_SERVER_URL=https://your-app.onrender.com/notify
